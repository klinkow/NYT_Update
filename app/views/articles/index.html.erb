<h1 class="center-align">News Feed</h1>

<% require 'fuzzystringmatch' %>
<% jarow = FuzzyStringMatch::JaroWinkler.create(:native) %>
<h3><%= jarow.getDistance('jones', 'johnson') %></h3>




<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><h3>title</h3></td>
      <td><h3>section</h3></td>
      <td><h3>subsection</h3></td>
      <td><h3>abstract</h3></td>
      <td><h3>per_facet</h3></td>
      <td><h3>geo_facet</h3></td>
    </tr>
    <% @newses.each do |news| %>
      <tr>
        <td><h4><%= news["title"] %></h4></td>
        <td><%= news["section"] %></td>
        <td><%= news["subsection"] %></td>
        <td><%= news["abstract"] %></td>
        <td><%= news["per_facet"] %></td>
        <td><%= news["geo_facet"] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<table>
  <tbody>
    <hr>
      <% @questions.each do |question| %>
        <tr>
          <td><h4><%= HTMLEntities.new.decode(question["question"]) %></h4></td>
          <td><%= question["category"] %></td>
          <td><%= question["type"] %></td>
          <td><%= question["difficulty"] %></td>
          <td><%= HTMLEntities.new.decode(question["correct_answer"]) %></td>
          <td><%= HTMLEntities.new.decode(question["incorrect_answers"]) %></td>
        </tr>
      <% end %>
    <hr>
  </tbody>
</table>


<%= link_to "Generate New Article", new_article_path %>
